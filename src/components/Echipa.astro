---
import { Image } from 'astro:assets';
import zugrav from '../assets/zugrav.jpg';
import electrician from '../assets/electrician.jpg';
import instalator from '../assets/instalator.jpg';
---

<section>
	<div class="my-24 container">
		<div class="flex gap-6">
			<div class="relative">
				<Image slot="card_image" src={zugrav} format="avif" quality={'mid'} alt="imagine parchet" class="object-cover object-center h-full rounded-lg" />
				<div class="bg-blue-100 py-6 w-full max-w-[80%] px-6 absolute -translate-y-1/2 -translate-x-1/2 left-1/2 rounded-lg text-center">
					<p class="text-gri-text font-bold text-[1.25rem]">Radu Munteanu</p>
					<p class="text-gray-500 text-[.875rem] mt-3">Zugrav</p>
				</div>
			</div>
			<div class="relative">
				<Image slot="card_image" src={electrician} format="avif" quality={'mid'} alt="imagine parchet" class="object-cover object-center h-full rounded-lg" />
				<div class="bg-blue-100 py-6 w-full max-w-[80%] absolute -translate-y-1/2 -translate-x-1/2 left-1/2 rounded-lg text-center">
					<p class="text-gri-text font-bold text-[1.25rem]">Mihai Stan</p>
					<p class="text-gray-500 text-[.875rem] mt-3">Electrician</p>
				</div>
			</div>
			<div class="relative">
				<Image slot="card_image" src={instalator} format="avif" quality={'mid'} alt="imagine parchet" class="object-cover object-center h-full rounded-lg" />
				<div class="bg-blue-100 py-6 w-full max-w-[80%] absolute -translate-y-1/2 -translate-x-1/2 left-1/2 rounded-lg text-center">
					<p class="text-gri-text font-bold text-[1.25rem]">Gabriel Enache</p>
					<p class="text-gray-500 text-[.875rem] mt-3">Instalator</p>
				</div>
			</div>
		</div>
	</div>
</section>