---
// library imports
import { Icon } from 'astro-icon';

// data imports
import navData from '../data/navData';
---

<header>
	<nav>
		<!-- ! top gray nav -->
		<div class="bg-gray-800">
			<div class="hidden container py-4 md:flex md:justify-between md:items-center text-sm font-medium">
				<!-- ! hours -->
				<div class="flex justify-between items-center gap-8">
					<div class="flex items-center gap-2">
						<Icon name="ic:round-access-time" class="w-4 h-4 text-yellow-500" />
						<p class="text-gray-400">Ore de lucru: <span class="text-gray-200 font-medium">09:00 - 17:00</span></p>
					</div>
					<div class="flex items-center gap-2">
						<Icon name="ic:baseline-location-on" class="w-4 h-4 text-yellow-500" />
						<p class="text-gray-400">Locație: <span class="text-gray-200 font-medium">Timișoara</span></p>
					</div>
					<div class="flex items-center gap-2">
						<Icon name="ic:baseline-local-phone" class="w-4 h-4 text-yellow-500" />
						<p class="text-gray-400">Telefon: <span class="text-gray-200 font-medium">071.234.567</span></p>
					</div>
				</div>
				<!-- ! social icons -->
				<div class="flex items-center justify-center gap-2">
					<p class="text-gray-400">Urmărește-ne:</p>
					<div class="flex gap-[.5rem]">
						<a href="#">
							<Icon name="mdi:facebook" class="w-4 h4 text-yellow-500 hover:text-yellow-200" />
						</a>
						<a href="">
							<Icon name="mdi:instagram" class="w-4 h4 text-yellow-500 hover:text-yellow-200" />
						</a>
						<a href="">
							<Icon name="mdi:twitter" class="w-4 h4 text-yellow-500 hover:text-yellow-200" />
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- ! actual navbar -->
		<div class="container bg-white flex flex-wrap items-center justify-between py-4 md:py-6 text-lg text-gri-text">
			<div class="flex gap-2 items-center">
				<Icon name="ic:baseline-construction" class="w-10 h-10 text-accent" />
				<p class="tracking-wide font-bold text-xl">Reno<span class="text-accent">Design</span></p>
			</div>
			<Icon name="mdi:hamburger-menu" class="w-12 h-12 text-accent cursor-pointer md:hidden block" id="hamburger-menu" />
			<Icon name="ic:baseline-cancel" class="w-12 h-12 text-accent cursor-pointer md:hidden hidden" id="close-menu" />
			<!-- ! menu -->
			<div class="hidden h-screen text-center w-full items-center md:h-auto md:flex md:items-center md:w-auto" id="menu">
				<ul class="pt-4 text-lg font-bold text-gri-text md:text-sm md:flex md:justify-between md:pt-0">
					{
						navData.map((item) => (
							<a class="md:p-4 py-3 block hover:rounded-lg hover:text-blue-500" href={item.path}>
								{item.name}
							</a>
						))
					}
					<a
						class="md:py-2 md:px-4 py-3 block text-white bg-accent hover:bg-blue-500 focus:outline-none focus:ring active:bg-accent font-medium rounded-lg text-center md:flex md:items-center"
						href="#">Cere oferta</a
					>
				</ul>
			</div>
		</div>
	</nav>

	<script>
		const button = document.querySelector('#hamburger-menu');
		const closeButton = document.querySelector('#close-menu');
		const menu = document.querySelector('#menu');
		const body = document.body;

		button.addEventListener('click', toggleMenu);
		closeButton.addEventListener('click', toggleMenu);

		function toggleMenu() {
			menu.classList.toggle('hidden');
			button.classList.toggle('hidden');
			closeButton.classList.toggle('hidden');

			if (menu.classList.contains('hidden')) {
				body.style.overflow = 'auto';
			} else {
				body.style.overflow = 'hidden';
			}
		}
	</script>
</header>
